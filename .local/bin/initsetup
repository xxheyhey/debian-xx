#!/bin/bash

#sudo add-apt-repository ppa:git-core/ppa  -y
sudo apt update
sudo apt upgrade -y
sudo apt full-upgrade -y

sudo apt install git build-essential curl gettext unzip cmake ccache xclip seqkit ninja-build python3 python3-dev python3-pip fzf fd-find pipx tmux -y

pipx install cmake

git clone https://github.com/neovim/neovim.git 
cd neovim && make CMAKE_BUILD_TYPE=RelWithDebInfo
sudo make install
cd .. && sudo rm -rf neovim

sudo apt autoremove -y
sudo apt clean
sudo apt autoclean -y
